{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext", "WebWorker"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "jsx": "react-jsx",
    "allowJs": true,
    "checkJs": false,
    "noEmit": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "verbatimModuleSyntax": false,
    "baseUrl": ".",
    "paths": {
      "@apps/*": ["../apps/*"],
      "@apps/lib/*": ["../packages/lib/*"],
      "@apps/lib": ["../packages/lib/index.js"],
      "@apps/state": ["../packages/state"],
      "@apps/journal-state": ["../packages/journal-state/src"],
      "@apps/journal-state/*": ["../packages/journal-state/src/*"],
      "@apps/utils/*": ["../packages/utils/*"]
    }
  },
  "include": [
    "src",
    "../packages/state",
    "../packages/lib",
    "../packages/journal-state"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build"
  ]
}
